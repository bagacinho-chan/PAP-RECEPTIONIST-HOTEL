<Window x:Class="PAP___RECEPTIONIST_HOTEL.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAP___RECEPTIONIST_HOTEL.View"
        mc:Ignorable="d"
        Height="566.93" Width="914.65"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="a"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="22"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Painel de Controlo"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Margin="0,20,0,0"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Reservas"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Margin="0,20,0,0"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Requisitar"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Margin="0,20,0,0"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Utilizadores"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Margin="0,20,0,0"
                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
